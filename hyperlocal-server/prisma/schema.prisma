generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  email String @unique
  password String
  name String 
  role String
  franchisee Franchisee?

  @@map("user")
}

model Product {
  id String @id 
  name String 
  plan String
  description String
  score Int
  price Int
  startDate DateTime
  endDate DateTime?

  @@map("products")

}

model Franchisee{
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String  @unique @id
  personalEmail String @unique @map("personal_email")
  cnpj String @unique
  phoneNumber String @map("phone_number")
  city String
  address String
  clients Client[] @relation(name: "franchisee_clients")

  @@map("franchisee")
}

model Tier {
  id String @id
  name String @unique
  scoreMin Int @unique @map("score_min")
  scoreMax Int @unique @map("score_max")
  percentageSaas Float @map("percentage_saas")
  percentageMDR Float @map("percentage_mdr")

  @@map("tier")
}

model Client {
  id String @id
  systemId Int @map("system_id")
  franchisee Franchisee @relation(fields:[franchiseeId], references: [userId], name:"franchisee_clients", onDelete: Cascade)
  franchiseeId String
  name String
  startDate DateTime @map("start_date")
  endDate DateTime? @map("end_date")

  @@map("client")
}